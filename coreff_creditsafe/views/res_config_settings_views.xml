<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_coreff_societecom_config" model="ir.ui.view">
            <field name="name">Coreff: Configuration</field>
            <field name="model">res.config.settings</field>
	      	<field name="inherit_id" ref="coreff_base.view_coreff_config"/>
            <field name="arch" type="xml">
	            <xpath expr="//div[@id='coreff_settings_block']"
                			 position="inside">
					<h2>Credit Safe API</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box"
							id="lease4_crm_societecom_config">
							<div class="o_setting_left_pane">
							</div>
							<div class="o_setting_right_pane">

								<div class="content-group">
									<div class="row mt16">
										<label for="creditsafe_url" class="col-lg-3 o_light_label"/>
										<field name="creditsafe_url"/>
									</div>
									<div class="row">
										<label for="creditsafe_username" class="col-lg-3 o_light_label"/>
										<field name="creditsafe_username"/>
									</div>
									<div class="row">
										<label for="creditsafe_password" class="col-lg-3 o_light_label"/>
										<field name="creditsafe_password" password="True"/>
									</div>
									<div class="row">
										<label for="creditsafe_token" class="col-lg-3 o_light_label"/>
										<field name="creditsafe_token"/>
									</div>
								</div>
				
							</div>
						</div>
					</div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>