<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="creditsafe_captive_form" 
        model="ir.ui.view">
        <field name="name">creditsafe.captive.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" 
            ref="base.view_company_form" />
        <field name="arch" 
            type="xml">
            <xpath expr="//notebook" 
                position="inside">
                <page string="Creditsafe">
                    <group>
                        <group>
                            <field name="creditsafe_url" />
                            <field name="creditsafe_username" />
                            <field name="creditsafe_password" />
                        </group>
                        <group>
                            <field name="creditsafe_parent_url" />
                            <field name="creditsafe_parent_username" />
                            <field name="creditsafe_parent_password" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>